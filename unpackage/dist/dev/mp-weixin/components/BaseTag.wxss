.base-tag {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 30rpx;
  font-size: 18rpx;
  padding: 0 8rpx;
  color: #333;
  border-radius: 4rpx;
  background-color: #fff;
  margin-right: 8rpx;
  box-sizing: border-box;
  margin-bottom: 8rpx;
}
.middle {
  height: 36rpx;
  padding: 0 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  margin-right: 16rpx;
}
.img-tag {
  display: block;
  height: 30rpx;
  border-radius: 4rpx;
  margin-right: 14rpx;
  box-sizing: border-box;
  margin-bottom: 8rpx;
}
.middle-img-tag {
  height: 36rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
