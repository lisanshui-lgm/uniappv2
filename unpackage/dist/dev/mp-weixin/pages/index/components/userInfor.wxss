.userInfor {
  background: #FFFFFF;
}
.userInfor .mark {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 50;
}
.userInfor .codePopup .icon-guanbi2 {
  margin-top: 75rpx !important;
}
.userInfor.pageOn {
  border-radius: 12rpx;
}
.userInfor .right {
  position: relative;
}
.userInfor .right::before {
  content: "";
  position: absolute;
  top: 0;
  right: 20rpx;
  left: 20rpx;
  border-top: 1rpx solid #EEEEEE;
}
.userInfor .right .item {
  flex: 1;
  min-width: 0;
  padding: 34rpx 0;
  margin: 0;
  font-size: 26rpx;
  line-height: 36rpx;
  color: #999999;
}
.userInfor .right .item .num {
  font-family: SemiBold;
  font-weight: 500;
  font-size: 28rpx;
  margin-left: 8rpx;
  color: #333333;
}
.userInfor .right .iconfont {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}
.userInfor .left {
  padding: 32rpx 20rpx;
}
.userInfor .left .pictrue {
  width: 90rpx;
  height: 90rpx;
  border: 1px solid #EEEEEE;
  border-radius: 50%;
  margin-right: 20rpx;
}
.userInfor .left .pictrue image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userInfor .left .pictrue .king {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: -18rpx;
  right: -8rpx;
}
.userInfor .left .text {
  flex: 1;
  font-weight: 400;
  font-size: 28rpx;
}
.userInfor .left .text .name {
  margin-bottom: 8rpx;
}
.userInfor .left .text .name .nameCon {
  max-width: 190rpx;
  font-weight: bold;
}
.userInfor .left .text .name .lable {
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: 16rpx;
  margin-left: 8rpx;
  font-weight: 500;
  font-size: 20rpx;
  line-height: 32rpx;
}
.userInfor .left .text .name .lable .iconfont {
  margin-right: 4rpx;
  font-size: 20rpx;
}
.userInfor .left .text .progress {
  overflow: hidden;
  background-color: #EEEEEE;
  width: 120rpx;
  height: 14rpx;
  border-radius: 7rpx;
  position: relative;
  margin-right: 8rpx;
}
.userInfor .left .text .progress .bg-reds {
  width: 0;
  height: 14rpx;
  border-radius: 7rpx;
  transition: width 0.6s ease;
  background: linear-gradient(90deg, var(--view-theme) 0%, var(--view-gradient) 100%);
}
.userInfor .left .text .percent {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #666666;
}
.userInfor .left .text .phone {
  font-weight: 400;
  font-size: 20rpx;
  margin-top: 6rpx;
}
.userInfor .left .text .phone .icon-shouji2 {
  margin-right: 4rpx;
  font-size: 20rpx;
}
.userInfor .left .right::before {
  display: none;
}
.userInfor .left .item {
  width: 108rpx;
  padding: 0;
  overflow: hidden;
  text-align: center;
  font-size: 22rpx;
  color: #999999;
}
.userInfor .left .item .num {
  margin: 0 0 12rpx;
  font-size: 32rpx;
}
.userInfor .left .item .iconfont {
  font-weight: 500;
  color: #333333;
  font-size: 40rpx;
  margin: 0 0 12rpx;
}
.userInfor .bottom {
  position: relative;
}
.userInfor .bottom::before {
  content: "";
  position: absolute;
  top: 0;
  right: 20rpx;
  left: 20rpx;
  border-top: 1px solid #EEEEEE;
}
.userInfor .bottom .item {
  flex: 1;
  padding: 42rpx 0 40rpx;
  text-align: center;
  font-weight: 500;
  font-size: 22rpx;
  line-height: 30rpx;
  color: #999999;
}
.userInfor .bottom .num {
  margin: 0 0 12rpx;
  font-family: SemiBold;
  font-weight: 500;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #333333;
}

